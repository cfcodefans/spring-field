    <modelVersion>4.0.0</modelVersion>

    <artifactId>spring-field-app</artifactId>
    <groupId>cfcodefans.study</groupId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>spring-field-app</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <kotlin.code.style>official</kotlin.code.style>
        <kotlin.compiler.jvmTarget>16</kotlin.compiler.jvmTarget>
<!--        <kotlin.version>2.0.0-RC2</kotlin.version>-->
        <kotlin.version>1.9.0</kotlin.version>
        <spring-boot.version>3.1.2</spring-boot.version>
        <springfox.version>2.9.2</springfox.version>
    </properties>

    <repositories>
        <repository>
            <id>mavenCentral</id>
            <url>https://repo1.maven.org/maven2/</url>
        </repository>
    </repositories>

    <profiles>
        <profile>
            <id>lab</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <profileActive>lab</profileActive>
                <debug>-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:8903</debug>
                <heapMax>2048</heapMax>
            </properties>
        </profile>
    </profiles>

    <build>
        <sourceDirectory>src/main/kotlin</sourceDirectory>
        <testSourceDirectory>src/test/kotlin</testSourceDirectory>
        <resources>
            <resource>
                <directory>src/main/kts</directory>
                <includes>
                    <include>**/*.kts</include>
                    <include>**/*.xml</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.jetbrains.kotlin</groupId>
                <artifactId>kotlin-maven-plugin</artifactId>
                <version>${kotlin.version}</version>
                <configuration>
                    <jvmTarget>17</jvmTarget>
                    <apiVersion>1.9</apiVersion>
                    <languageVersion>1.9</languageVersion>
                </configuration>
                <executions>
                    <execution>
                        <id>compile</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>test-compile</id>
                        <phase>test-compile</phase>
                        <goals>
                            <goal>test-compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.0.0-M7</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>3.0.0-M7</version>
            </plugin>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${spring-boot.version}</version>
                <configuration>
                    <!--
                    add-exports=java.xml.bind/javax.xml.bind=ALL-UNNAMED
                    -XX:+UseLWPSynchronization
                    -XX:-UseBiasedLocking
                    -->
                    <jvmArguments>
                        ${debug}
                        -XX:+UnlockDiagnosticVMOptions
                        -XX:MaxHeapFreeRatio=40
                        -XX:-UseGCOverheadLimit
                        -XX:MinHeapFreeRatio=15
                        -XX:CompileThreshold=3000
                        -XX:+UseStringDeduplication
                        -XX:+UseG1GC
                        -XX:MaxMetaspaceSize=192m
                        -XX:+OptimizeStringConcat
                        -Xms${heapMax}m
                        -Xmx${heapMax}m
                        -server

                        -Dlog4j2.formatMsgNoLookups=True
                    </jvmArguments>
                    <profiles>${profileActive}</profiles>
                    <jmxPort>9008</jmxPort>
                    <wait>1000</wait>
                    <maxAttempts>60</maxAttempts>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.10.1</version>
                <configuration>
                    <source>17</source>
                    <target>17</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

